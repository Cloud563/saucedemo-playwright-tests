{
  "compilerOptions": {
    "lib": ["es2015"],
    "module": "commonjs",
    "target": "es2015",
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["pages/*"],
      "@fixtures/*": ["fixtures/*"],
      "@test-data/*": ["test-data/*"],
      "@tests/*": ["tests/*"],
      "@helpers/*": ["helpers/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
